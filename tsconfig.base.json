{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "strict": true,
    "moduleResolution": "node16",
    "allowJs": false,
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@telecom/*": ["libs/*/src"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
